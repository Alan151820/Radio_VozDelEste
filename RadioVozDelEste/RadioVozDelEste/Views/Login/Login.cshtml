
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<body>

    <img src="https://jeffreymichaels.com/wp-content/uploads/2017/09/JM-REP-BLU.png" class="ImagenUsuario" />
    <div class="AccessLogin">
        <div class="StyleImput">
            <img src="https://creazilla-store.fra1.digitaloceanspaces.com/icons/7915728/user-icon-md.png" class="ImagenesLogo" />
            <input class="InputAcceso" placeholder="Ingrese Usuario" type="email" />
        </div>
        <div class="StyleImput">

            <img src="https://raw.githubusercontent.com/Bisns/password-generator/master/logo.png" class="ImagenesLogo" />
            <input class="InputAcceso" placeholder="Ingrese Contraseña" type="password" />
        </div>

        <button id="btnAbrirSesion" type="submit"> INICIAR SESION</button>

        <div class="OptionLogin">

            <label class="OptionRegister">¿No tienes cuenta?</label>
            <a href="/Login/SignUp">Registrarse</a>
        </div>

    </div>
</body>
</html>


<style>


    body {
        background: linear-gradient(to right, #dfe9f3, #ffffff);
    }
    .AccessLogin {
        width: 300px;
        height: 300px;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 5px grey;
        margin: auto;
        margin-top: 10vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center; 
        gap: 25px;
        border: 4px solid transparent;
        background-image: linear-gradient(white, white), linear-gradient(to right, #2c9fb4, #0e7a6d);
        background-clip: padding-box, border-box;
        position:relative;
    }
    .ImagenUsuario {
        position: absolute;
        top: 30px; 
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        border-radius: 50%;
        background: white;
        z-index:1;
    }
    .InputAcceso {
        height: 40px;
        border-radius: 50px;
        margin-left: 10px;
        border: none;
    }

    input::placeholder {
        color: gray;
        font-size: 16px;
        font-style: italic;
        padding-left: 10px;
    }

    .InputAcceso:focus {
        outline: none;
    }

        .InputAcceso:focus::placeholder {
            color: transparent;
        }

    .ImagenesLogo {
        height: 40px;
        width: 40px;
    }

    .StyleImput {
        display: flex;
        align-items: center;
        border: 1.5px solid #07564a;
        border-radius: 50px;
        background-color: white;
        width: 250px;
    }

    #btnAbrirSesion {
        background-color: black;
        border-radius: 10px;
        padding: 10px;
        border: none;
        width: 70%;
        color: white;
    }

        #btnAbrirSesion:hover {
            background-color: #033; /* un negro más claro */
            cursor:pointer;
        }

</style>







